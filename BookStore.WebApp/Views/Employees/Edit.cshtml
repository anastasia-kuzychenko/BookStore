@model BookStore.Models.Employee
@{
    ViewData["Title"] = "Edit emploee";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Edit Employee</h1>
</div>

<form method="post" class="needs-validation" novalidate>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" required>
            <div class="invalid-feedback">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Surname</label>
            <input type="text" class="form-control" asp-for="Surname" placeholder="Enter surname" required>
            <div class="invalid-feedback">
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="inputState">Position</label>
        <select class="custom-select" asp-for="Position" asp-items="Html.GetEnumSelectList<BookStore.Models.EmployeePosition>()">
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="Position"></span>
        </div>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Enter phone" required>
        <div class="invalid-feedback">
            <span asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Birstday</label>
            <input type="date" class="form-control" asp-for="Birthday" required>
            <div class="invalid-feedback">
                <span asp-validation-for="Birthday"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>First day</label>
            <input type="date" class="form-control" asp-for="FirstDay" required>
            <div class="invalid-feedback">
                <span asp-validation-for="FirstDay"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" href="javascript:void(0);" onclick="history.go(-1);">Cancel</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"
        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}   